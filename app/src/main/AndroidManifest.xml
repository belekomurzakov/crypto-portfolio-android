<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omurzakov.cryptoportfolio">

    <application
        android:name=".CryptoPortfolioApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_btc_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_btc_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptoPortfolio">
        <activity
            android:name=".activities.SinglePageActivity"
            android:exported="false"
            android:label="@string/title_activity_single_page"
            android:theme="@style/Theme.CryptoPortfolio.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>